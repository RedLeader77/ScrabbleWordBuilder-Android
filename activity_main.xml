<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent">
    <TextView
        android:id="@+id/lettertracker_textview"
        style="@style/MyTextViewStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Letter Tracker"
        android:paddingLeft="10px" />
    <EditText
        android:id="@+id/lettertracker_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="7pt"
        android:textColor="#000000"
        android:lines="4"
        android:focusable="false" />
    <TextView
        android:id="@+id/rack_textview"
        style="@style/MyTextViewStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rack"
        android:paddingLeft="10px" />
    <EditText
        android:id="@+id/rack_edittext"
        style="@style/MyEditTextStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:textColor="#000000"
        android:lines="1"
        android:inputType="textCapCharacters" />
    <TextView
        android:id="@+id/word_textview"
        style="@style/MyTextViewStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Word (Optional)"
        android:paddingLeft="10px" />
    <EditText
        android:id="@+id/word_edittext"
        style="@style/MyEditTextStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:textColor="#000000"
        android:lines="1"
        android:inputType="textCapCharacters" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/process_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="Process"
            android:onClick="processButtonClicked" />

        <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="Reset"
            android:onClick="resetButtonClicked" />

    </LinearLayout>

    <TextView
        android:id="@+id/output_textview"
        style="@style/MyTextViewStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Output"
        android:paddingLeft="10px" />
    <EditText
        android:id="@+id/output_edittext"
        style="@style/MyEditTextStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:textColor="#000000"
        android:lines="2"
        android:focusable="false" />
    <TextView
        android:id="@+id/wordscore_textview"
        style="@style/MyTextViewStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Word Score"
        android:paddingLeft="10px" />
    <EditText
        android:id="@+id/wordscore_edittext"
        style="@style/MyEditTextStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:textColor="#000000"
        android:lines="1"
        android:focusable="false" />
</LinearLayout>
